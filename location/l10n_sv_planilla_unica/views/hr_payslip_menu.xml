<odoo>
  <data>
    <record id="action_planilla_unica" model="ir.actions.act_window">
      <field name="name">Planilla única</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">hr.payslip.planilla.unica</field>
      <field name="view_mode">list</field> <!-- en v17/v18 es list -->
    </record>

    <!-- (opcional) vincula explícitamente tu list view a la acción -->
    <record id="action_planilla_unica_view_list" model="ir.actions.act_window.view">
      <field name="act_window_id" ref="action_planilla_unica"/>
      <field name="view_mode">list</field>
      <field name="view_id" ref="view_hr_planilla_list_custom"/>
      <field name="sequence" eval="1"/>
    </record>

    <menuitem
      id="menu_planilla_unica"
      name="Reporte planilla única"
      parent="hr_payroll.menu_hr_payroll_report"
      action="action_planilla_unica"
      sequence="100"
      groups="base.group_system"
    />
  </data>
</odoo>
