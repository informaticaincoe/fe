<odoo>

    <!-- Search View -->
    <record id="view_res_configuration_search" model="ir.ui.view">
        <field name="name">res.configuration.search</field>
        <field name="model">res.configuration</field>
        <field name="arch" type="xml">
            <search string="Configuraciones">
                <field name="company_id"/>
                <field name="clave"/>
                <field name="value_text"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!-- Vista Lista -->
    <record id="view_res_configuration_list" model="ir.ui.view">
        <field name="name">res.configuration.list</field>
        <field name="model">res.configuration</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="action_open_configuration"
                        type="object"
                        string="Actualizar"
                        class="oe_highlight"
                        icon="fa-refresh"
                        display="always"
                        title="Recarga todas las configuraciones para la empresa seleccionada"/>
                </header>
                <field name="company_id"/>
                <field name="value_text"/>
                <field name="description"/>
                <field name="clave"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_res_configuration_form" model="ir.ui.view">
        <field name="name">res.configuration.form</field>
        <field name="model">res.configuration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="value_type"/>
                        <field name="value_text"/>
                        <field name="description"/>
                        <field name="active"/>
                        <field name="pwd"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción Server que llama a Python para filtrar por compañía seleccionada -->
    <record id="action_res_configuration" model="ir.actions.server">
        <field name="name">Abrir Configuraciones Empresa</field>
        <field name="model_id" ref="model_res_configuration"/>
        <field name="state">code</field>
        <field name="code">action = model.action_open_configuration()</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_res_configuration"
        name="Configuraciones Empresa"
        parent="base.menu_users"
        action="action_res_configuration"
        sequence="30"
        groups="base.group_user"/>
</odoo>
