<odoo>
    <data>
        <record id="view_account_new_fields" model="ir.ui.view">
            <field name="name">account.move.form.new.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_invoice_sv.view_invoice_form_sv"/>
            <field name="arch" type="xml">

                <!-- Insertamos después del grupo de Retenciones -->
                <xpath expr="//group[@name='group_totales']" position="after">
                    <group string="Clasificación de Operaciones" col="2" invisible="not sit_facturacion">
                        <field name="tipo_ingreso_id" invisible="move_type in('in_invoice', 'in_refund') or not codigo_tipo_documento"/>
                        <field name="tipo_operacion"/>
                        <field name="clasificacion_facturacion" invisible="move_type in('out_invoice', 'out_refund')" domain="clasificacion_domain"/>
                        <field name="sector" invisible="move_type in('out_invoice', 'out_refund')" domain="sector_domain"/>
                        <field name="tipo_costo_gasto_id" invisible="move_type in('out_invoice', 'out_refund')" domain="tipo_costo_gasto_domain"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_partner_sales_purchase_clasificacion" model="ir.ui.view">
            <field name="name">res.partner.form.sales.purchase.clasificacion</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <!-- Ventas y Compras → después del grupo Compras -->
                <xpath expr="//page[@name='sales_purchases']//group[@name='purchase']" position="after">
                    <group string="Clasificación de Operaciones" col="2">
                        <field name="tipo_ingreso_id_partner"/>
                        <field name="tipo_operacion_partner"/>
                        <field name="clasificacion_facturacion_partner" domain="clasificacion_partner_domain"/>
                        <field name="sector_partner" domain="sector_partner_domain"/>
                        <field name="tipo_costo_gasto_id_partner" domain="tipo_costo_gasto_partner_domain"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
