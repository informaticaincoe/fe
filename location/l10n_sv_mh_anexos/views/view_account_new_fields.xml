<odoo>
    <data>
        <record id="view_account_new_fields" model="ir.ui.view">
            <field name="name">account.move.form.new.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_invoice_sv.view_invoice_form_sv"/>
            <field name="arch" type="xml">

                <!-- Insertamos después del grupo de Retenciones -->
                <xpath expr="//group[@name='group_retenciones']" position="after">
                    <group string="Clasificación de Operaciones" col="2">
                        <field name="tipo_ingreso_id"/>
                        <field name="tipo_costo_gasto_id"/>
                        <field name="tipo_operacion"/>
                        <field name="clasificacion_facturacion"/>
                        <field name="sector"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
