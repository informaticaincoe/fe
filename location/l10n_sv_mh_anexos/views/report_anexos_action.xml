<odoo>
    <data>
        <!-- Acción Consumidor Final -->
        <record id="action_anexo_clientes" model="ir.actions.act_window">
            <field name="name">Anexo Clientes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_anexo_consumidor_final_list"/>
            <field name="search_view_id" ref="view_anexos_fechas_search"/>
            <field name="domain">[('codigo_tipo_documento', 'in', ['01', '11']), ('hacienda_estado', '=', 'PROCESADO'), ('hacienda_selloRecibido', '!=', '')]</field>
            <field name="context">{'numero_anexo': 2}</field>
        </record>

        <!-- Acción Credito Fiscal -->
        <record id="action_anexo_credito_fiscal" model="ir.actions.act_window">
            <field name="name">Anexo Contribuyentes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_anexo_contribuyentes_list"/>
            <field name="search_view_id" ref="view_anexos_fechas_search"/>
            <field name="domain">[('codigo_tipo_documento', '=', '03'), ('hacienda_estado', '=', 'PROCESADO'), ('hacienda_selloRecibido', '!=', '')]</field>
            <field name="context">{'numero_anexo': 1}</field>
        </record>

        <!-- Acción Crompas -->
        <record id="action_anexo_compras" model="ir.actions.act_window">
            <field name="name">Anexo Detalles de compra</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_anexo_compras_list"/>
            <field name="search_view_id" ref="view_anexos_fechas_search"/>
            <field name="domain">[('codigo_tipo_documento', 'in', ['03', '05', '06', '11']), ('hacienda_estado', '=', 'PROCESADO'), ('hacienda_selloRecibido', '!=', '')]</field>
            <field name="context">{'numero_anexo': 3}</field>
        </record>

        <!-- Acción Sujeto excluido -->
        <record id="action_anexo_sujeto_excluido" model="ir.actions.act_window">
            <field name="name">Anexo Sujeto excluido</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_anexo_sujeto_excluido_list"/>
            <field name="search_view_id" ref="view_anexos_fechas_search"/>
            <field name="domain">[('codigo_tipo_documento', 'in', ['14']), ('hacienda_estado', '=', 'PROCESADO'), ('hacienda_selloRecibido', '!=', '')]</field>
            <field name="context">{'numero_anexo': 5}</field>
        </record>

        <menuitem
                id="menu_hacienda_reports"
                name="Anexos de Hacienda"
                parent="account.menu_finance_reports"
                sequence="20"/>

        <!-- Submenús -->
        <menuitem
                id="menu_anexo_consumidor_final"
                name="Anexo Consumidor Final"
                parent="menu_hacienda_reports"
                action="action_anexo_clientes"
                sequence="10"/>

        <menuitem
                id="menu_anexo_contribuyentes"
                name="Anexo Credito Fiscal"
                parent="menu_hacienda_reports"
                action="action_anexo_credito_fiscal"
                sequence="10"/>

        <menuitem
                id="menu_anexo_compras"
                name="Anexo Compras"
                parent="menu_hacienda_reports"
                action="action_anexo_compras"
                sequence="10"/>

        <menuitem
                id="menu_anexo_sujeto_excluido"
                name="Anexo Sujeto excluido"
                parent="menu_hacienda_reports"
                action="action_anexo_sujeto_excluido"
                sequence="10"/>
    </data>
</odoo>
