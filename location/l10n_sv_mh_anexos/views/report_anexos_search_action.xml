<odoo>
    <data>
        <record id="view_move_search_group_by_month" model="ir.ui.view">
            <field name="name">account.move.search.group.by.month</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <group expand="1" string="Agrupar por">
                        <!-- Facturas: agrupar por MES de invoice_date -->
                        <filter name="group_by_invoice_month"
                                string="Mes (Factura)"
                                context="{'group_by': 'invoice_date:month'}"/>
                        <!-- (Opcional) Para asientos con 'date' -->
                        <filter name="group_by_entry_month"
                                string="Mes (Asiento)"
                                context="{'group_by': 'date:month'}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
