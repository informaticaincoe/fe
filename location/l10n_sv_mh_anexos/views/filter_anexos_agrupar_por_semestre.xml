<odoo>
    <data>
        <record id="view_account_move_search_semestre" model="ir.ui.view">
            <field name="name">account.move.search.semestre</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter name="group_semester"
                            string="Agrupar por semestre"
                            context="{'group_by': 'semester_label'}"
                            help="Agrupa por Año-Semestre (p.ej. 2025-S1)"/>
                    <!-- Filtros rápidos opcionales -->
                    <filter name="semester_S1" string="S1 (Ene–Jun)" domain="[('semester','=','S1')]"/>
                    <filter name="semester_S2" string="S2 (Jul–Dic)" domain="[('semester','=','S2')]"/>
                </xpath>
            </field>
        </record>

        <record id="view_report_account_move_daily_search_semestre" model="ir.ui.view">
            <field name="name">report.account.move.daily.search.semestre</field>
            <field name="model">report.account.move.daily</field>
            <!-- puedes heredar de otra search si ya tienes una; aquí defino una search propia -->
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="invoice_date"/>
                    <filter name="group_semester"
                            string="Agrupar por semestre"
                            context="{'group_by': 'semester_label'}"
                            help="Agrupa por Año-Semestre (p.ej. 2025-S1)"/>
                    <separator/>
                    <filter name="semester_S1" string="S1 (Ene–Jun)" domain="[('semester','=','S1')]"/>
                    <filter name="semester_S2" string="S2 (Jul–Dic)" domain="[('semester','=','S2')]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>