<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_delivery_date_inline_like_due" model="ir.ui.view">
        <field name="name">account.move.form.delivery.date.inline.like.due</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Reemplazamos el field simple -->
            <xpath expr="//field[@name='delivery_date']" position="replace">
                <div class="o_td_label" invisible="not show_delivery_date">
                    <label for="delivery_date"/>
                </div>
                <div class="d-flex"
                     invisible="not show_delivery_date">
                    <field name="delivery_date" readonly="state != 'draft'"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="account_move_form_invoice_date_inline_clean" model="ir.ui.view">
        <field name="name">account.move.form.invoice.date.inline.clean</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Reemplazamos el label ORIGINAL de Invoice Date -->
            <xpath expr="//label[@for='invoice_date']" position="replace"/>

            <!-- Reemplazamos el field ORIGINAL SOLO para ventas -->
            <xpath expr="//field[@name='invoice_date']" position="replace">
                <div class="o_td_label" invisible="move_type not in ('out_invoice','out_refund','out_receipt')">
                    <label for="invoice_date"/>
                </div>
                <div class="d-flex" invisible="move_type not in ('out_invoice','out_refund','out_receipt')">
                    <field name="invoice_date"
                           options="{'warn_future': true}"
                           readonly="state != 'draft'"
                           placeholder="Today"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- JOURNAL ATTRIBUTES ADJUSTED -->
    <record id="view_move_form_journal_inline_single" model="ir.ui.view">
        <field name="name">account.move.form.journal.inline.single</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Reemplaza el PRIMER journal (label + field) -->
            <xpath expr="(//label[@for='journal_id'])[1]" position="replace">
                <div class="d-flex align-items-center gap-2">
                    <label for="journal_id" class="o_form_label"/>
                    <field name="journal_id"
                           readonly="state != 'draft'"
                           options="{'no_create': True}"
                           class="o_inline"/>
                </div>
            </xpath>

            <!-- Elimina COMPLETAMENTE el segundo journal -->
            <xpath expr="(//field[@name='journal_id'])[2]" position="replace"/>
        </field>
    </record>
</odoo>