<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard -->
    <record id="view_dte_import_form" model="ir.ui.view">
        <field name="name">dte.import.form</field>
        <field name="model">dte.import</field>
        <field name="arch" type="xml">
            <form string="Importar DTE (JSON)" readonly="state != 'draft'">

                <!-- HEADER -->
                <header>
                  <button name="action_import" type="object" string="Importar" class="btn-primary" invisible="state == 'done'"/>
                  <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>

                <sheet>
                    <!-- PARÁMETROS -->
                    <group>
                        <group string="Parámetros">
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="dte_import_journal_id" invisible="move_type == 'out_invoice'" required="move_type == 'in_invoice'"/>
                            <field name="post_moves"/>
                            <field name="skip_mh_flow"/>
                        </group>
                        <group string="Impuestos por línea">
                            <field name="tax_iva_13_id" domain="[('type_tax_use', '=', move_type == 'out_invoice' and 'sale' or 'purchase')]"/>
                            <field name="tax_exento_id" domain="[('type_tax_use', '=', move_type == 'out_invoice' and 'sale' or 'purchase')]"/>
                            <field name="tax_no_suj_id" domain="[('type_tax_use', '=', move_type == 'out_invoice' and 'sale' or 'purchase')]"/>
                        </group>
                    </group>

                    <!-- PRODUCTOS NO ENCONTRADOS -->
                    <group string="Productos no encontrados" invisible="not missing_products_info">
                        <field name="missing_products_info" nolabel="1" readonly="1"/>
                    </group>

                    <!-- NOTEBOOK -->
                    <notebook>
                        <page string="Archivos JSON">
                            <field name="lines">
                                <list editable="bottom">
                                    <field name="filename"/>
                                    <field name="file" filename="filename"/>
                                    <field name="observations" column_invisible="parent.move_type != 'in_invoice'" required="parent.move_type == 'in_invoice'"/>
                                    <button name="action_view_products" type="object" string="Ver productos" icon="fa-eye"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================== -->
    <!-- Listado de importaciones -->
    <!-- ===================== -->
    <record id="view_dte_import_tree" model="ir.ui.view">
        <field name="name">dte.import.list</field>
        <field name="model">dte.import</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="move_type"/>
                <field name="create_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!--  Productos-->
    <record id="view_dte_import_product_line_tree" model="ir.ui.view">
        <field name="name">dte.import.product.line.tree</field>
        <field name="model">dte.import.product.line</field>
        <field name="arch" type="xml">
        <list editable="bottom">
            <field name="product_id"/>
            <field name="quantity"/>
            <field name="price_unit"/>
            <field name="discount"/>
            <field name="tax_ids" widget="many2many_tags"/>
        </list>
        </field>
    </record>

    <record id="view_dte_import_product_line_form" model="ir.ui.view">
        <field name="name">dte.import.product.line.form</field>
        <field name="model">dte.import.product.line</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <sheet>
                    <group>
                        <field name="company_id" invisible="1"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="price_unit"/>
                        <field name="discount"/>
                        <field name="tax_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
