<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_percepcion" model="ir.ui.view">
            <field name="name">account.move.form.inherit.percepcion</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/> <!-- Vista del formulario -->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/list" position="inside">
                    <field name="apply_percepcion" width="100"
                        column_invisible="not parent.is_purchase or parent.codigo_tipo_documento == '14'"/>
                    <field name="apply_retencion" width="100"
                        column_invisible="not parent.is_purchase or parent.codigo_tipo_documento == '14'"/>
                    <field name="renta_percentage"
                        column_invisible="not parent.is_purchase or parent.codigo_tipo_documento == '14'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
