<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_accounting_date_label_purchase" model="ir.ui.view">
        <field name="name">account.move.form.accounting.date.label.purchase</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- SOLO el Accounting Date de compras -->
            <xpath expr="//group[.//field[@name='date'] and .//field[@name='ref']]//field[@name='date']" position="replace">

                <div class="o_td_label"
                     invisible="move_type not in ('in_invoice','in_refund')">
                    <label for="date" string="Fecha contable"/>
                </div>
                <div class="d-flex"
                     invisible="move_type not in ('in_invoice','in_refund')">
                    <field name="date"
                           readonly="state != 'draft'"
                           nolabel="1"/>
                </div>

            </xpath>

        </field>
    </record>
</odoo>
