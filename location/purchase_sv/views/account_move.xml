<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_move_form_doc_number">
            <field name="name">account_move_form_doc_number</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="document_number"/>
                </xpath>
                <!-- Agregar sit_tipo_documento_id después de journal_id -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <group>
                        <field name="sit_tipo_documento_id" string="Tipo de Documento" invisible="move_type != 'in_invoice'" readonly="False"/>
                    </group>
                </xpath>
<!--                <xpath expr="//field[@name='partner_id']" position="after">-->
<!--                    <group>-->
<!--                        <field name="hacienda_codigoGeneracion_identificacion" string="Número de Resolución" style="width: 100%;"-->
<!--                               invisible="codigo_tipo_documento" readonly="False"/>-->
<!--                    </group>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <group>
                        <field name="hacienda_codigoGeneracion_identificacion"
                               string="Número de Resolución"
                               readonly="False"
                               class="oe_inline"
                               placeholder="Ingrese número de resolución"
                               style="max-width: 300px;"
                               invisible="codigo_tipo_documento"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Campo name editable solo para compras en borrador -->
        <record id="view_move_form_inherit_edit_name_purchase" model="ir.ui.view">
            <field name="name">account.move.form.inherit.edit.name.purchase</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>