<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Mostrar sit_tipo_documento_id después del partner -->
        <record id="view_move_form_tipo_documento" model="ir.ui.view">
            <field name="name">account.move.form.tipo.documento</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="document_number"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <label for="sit_tipo_documento_id" invisible="codigo_tipo_documento"/>
                    <field name="sit_tipo_documento_id" readonly="False" invisible="codigo_tipo_documento"/>
                </xpath>
            </field>
        </record>

        <!-- Hacer editable el campo name -->
        <record id="view_move_form_edit_name" model="ir.ui.view">
            <field name="name">account.move.form.edit.name</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>

        <!-- Agregar campos de identificación DTE debajo de name -->
        <record id="view_move_form_identificacion_dte" model="ir.ui.view">
            <field name="name">account.move.form.identificacion.dte</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <!-- Este div evita heredar el estilo grande del encabezado -->
                    <div style="font-size: 13px; font-weight: normal;">
                        <group string="Identificación DTE" colspan="2" invisible="codigo_tipo_documento" readonly="False">
                            <field name="hacienda_selloRecibido"
                                   string="Sello recibido por Hacienda"
                                   placeholder="Ingrese el sello recibido"
                                   nolabel="0" readonly="False"/>
                            <field name="hacienda_codigoGeneracion_identificacion"
                                   string="Código de generación"
                                   placeholder="Ingrese el código de generación"
                                   nolabel="0" readonly="False"/>
                            <field name="sit_invalidar" string="Documento anulado?" nolabel="0"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Agregar campos fecha_aplicacion y fecha_iva debajo de invoice_date -->
        <record id="view_move_form_fechas" model="ir.ui.view">
            <field name="name">account.move.form.fechas</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <group string="Fechas Adicionales" invisible="codigo_tipo_documento">
                        <field name="fecha_aplicacion" invisible="codigo_tipo_documento"/>
                        <field name="fecha_iva" invisible="codigo_tipo_documento"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Mostrar clase_documento_id en account.move -->
        <record id="view_move_form_clase_documento" model="ir.ui.view">
            <field name="name">account.move.form.clase.documento</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <label for="clase_documento_id" invisible="move_type != 'in_invoice' or codigo_tipo_documento == '14'"/>
                    <field name="clase_documento_id"
                           readonly="0"
                           options='{"no_open": true, "no_create": true}'
                           invisible="move_type != 'in_invoice' or codigo_tipo_documento == '14'"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_inherit_retencion_percepcion" model="ir.ui.view">
            <field name="name">account.move.form.inherit.retencion.percepcion</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="generar_asientos_retencion_compras"
                            string="Actualizar Ret./Perc./Renta"
                            type="object"
                            class="btn-primary"
                            invisible="context.get('default_move_type') not in ('in_invoice','in_refund')"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>