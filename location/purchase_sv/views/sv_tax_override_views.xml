<odoo>
  <!-- Wizard -->
  <record id="view_sv_tax_override_wizard" model="ir.ui.view">
    <field name="name">sv.tax.override.wizard.form</field>
    <field name="model">sv.tax.override.wizard</field>
    <field name="arch" type="xml">
      <form string="Cambiar cuentas de impuestos">
        <group>
          <field name="move_id" readonly="1"/>
        </group>
        <group>
          <field name="line_ids">
            <tree editable="bottom">
              <field name="tax_move_line_id" string="Impuesto" readonly="1"/>
              <field name="default_account_id" string="Cuenta por defecto" readonly="1"/>
              <field name="account_id" string="Cuenta a usar"/>
            </tree>
          </field>
        </group>
        <footer>
          <button string="Aplicar y validar" type="object" name="action_apply" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- PestaÃ±a en Impuestos -->
  <record id="view_account_tax_form_inherit_secondary_accounts" model="ir.ui.view">
    <field name="name">account.tax.form.secondary.accounts</field>
    <field name="model">account.tax</field>
    <field name="inherit_id" ref="account.view_tax_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="Cuentas alternativas">
          <field name="sv_secondary_account_ids">
            <tree editable="bottom">
              <field name="account_id"/>
              <field name="name"/>
            </tree>
          </field>
          <label string="Se sugieren cuando la fecha de vencimiento es mayor que la contable en facturas de compra."/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
