<odoo>
    <data>
        <record id="view_move_form_exp_duca_tab" model="ir.ui.view">
            <field name="name">account.move.form.exp_duca.tab</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="DUCA" invisible="move_type not in ['in_invoice','in_refund']">
                        <field name="exp_duca_id" context="{'default_move_id': id, 'default_company_id': company_id}"
                               nolabel="1" create="1" delete="1" readonly="0">
                            <list editable="bottom">
                                <field name="number"/>
                                <field name="acceptance_date"/>
                                <field name="regimen"/>
                                <field name="aduana"/>
                                <field name="valor_en_aduana"/>
                                <field name="dai_amount"/>
                            </list>
                            <form string="DUCA">
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="company_id" readonly="1"/>
                                            <field name="number"/>
                                            <field name="acceptance_date"/>
                                            <field name="regimen"/>
                                            <field name="aduana"/>
                                            <field name="currency_id"/>
                                        </group>
                                        <group string="Valores">
                                            <field name="valor_en_aduana"/>
                                            <field name="dai_amount"/>
                                            <field name="iva_importacion"/>
                                        </group>
                                    </group>
                                    <group string="Documento">
                                        <field name="duca_file" filename="duca_filename"/>
                                        <field name="duca_filename"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>