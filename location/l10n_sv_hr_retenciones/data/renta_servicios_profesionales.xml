<odoo>
  <data noupdate="0">

    <!-- Tipo input renta SP -->
    <record id="input_type_renta_sp" model="hr.payslip.input.type">
        <field name="name">Renta Servicios Profesionales</field>
        <field name="code">RENTA_SP</field>
    </record>

    <!-- Regla salarial renta SP -->
    <record id="salary_rule_deduccion_renta_sp" model="hr.salary.rule">
        <field name="name">Renta</field>
        <field name="code">RENTA_SP</field>
        <field name="sequence">16</field>
        <field name="category_id" ref="hr_payroll.DED"/>
        <field name="struct_id" ref="l10n_sv_hr_retenciones.structure_incoe_profesionales"/>
        <field name="condition_select">none</field>
        <field name="amount_select">input</field>
        <field name="input_type_id" ref="input_type_renta_sp"/>
        <field name="amount_other_input_id" ref="input_type_renta_sp"/>
        <field name="appears_on_payslip" eval="True"/>
    </record>

  </data>
</odoo>
