<odoo>
    <!-- Form del wizard -->
    <record id="view_hr_salary_attachment_mass_state_wizard_form"
            model="ir.ui.view">
        <field name="name">hr.salary.attachment.mass.state.wizard.form</field>
        <field name="model">hr.salary.attachment.mass.state.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualizar estado de deducciones" create="false" edit="false">
                <group>
                    <field name="state"/>
                </group>
                <group>
                    <field name="set_end_date"/>
                    <field name="end_date"
                           invisible="set_end_date == False"
                           required="set_end_date == True"/>
                </group>
                <footer>
                    <button name="action_apply" type="object"
                            string="Aplicar a seleccionados" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción que abre el wizard -->
    <record id="action_open_hr_salary_attachment_mass_state_wizard"
            model="ir.actions.act_window">
        <field name="name">Actualizar estado</field>
        <field name="res_model">hr.salary.attachment.mass.state.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_salary_attachment_mass_state_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
        <!-- Enlazar para que aparezca en el menú Acciones de la vista de lista -->
        <field name="binding_model_id" ref="hr_payroll.model_hr_salary_attachment"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
