<odoo>
    <record id="view_leave_form_inherit_vacation_type" model="ir.ui.view">
        <field name="name">hr.leave.form.vacation.full</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='holiday_status_id']" position="after">
            <field name="vacation_full"
                   modifiers='{"invisible": [["holiday_status_id.is_vacation","=",false]]}'/>
          </xpath>
        </field>
    </record>

    <record id="view_leave_type_form_inherit_vacation" model="ir.ui.view">
        <field name="name">hr.leave.type.form.is_vacation</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='requires_allocation']" position="after">
            <field name="is_vacation"/>
        </xpath>
        </field>
    </record>

</odoo>
