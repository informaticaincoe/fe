<odoo>
    <data>

        <!-- Vista tipo lista -->
        <record id="view_hr_retencion_afp_tree" model="ir.ui.view">
            <field name="name">hr.retencion.afp.tree</field>
            <field name="model">hr.retencion.afp</field>
            <field name="arch" type="xml">
                <list>
                    <field name="tipo"/>
                    <field name="porcentaje"/>
                </list>
            </field>
        </record>

        <!-- Vista tipo formulario -->
        <record id="view_hr_retencion_afp_form" model="ir.ui.view">
            <field name="name">hr.retencion.afp.form</field>
            <field name="model">hr.retencion.afp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="tipo"/>
                            <field name="porcentaje"/>
                            <field name="techo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
