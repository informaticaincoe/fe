<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="hr_payslip_report_incoe"
            model="hr.payslip"
            string="Recibo INCOE"
            report_type="qweb-pdf"
            name="rrhh.report_payslip_incoe"
            file="rrhh.report_payslip_incoe"
            print_report_name="'Recibo INCOE - %s' % object.employee_id.name"
        />

        <record id="paperformat_payslip_recipe" model="report.paperformat">
            <field name="name">Recibo de salario</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">8</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
    </data>
</odoo>