<odoo>
    <data noupdate="0">
        <!-- Eliminar reporte original de Odoo -->
        <delete model="ir.actions.report" id="hr_payroll.report_payslip"/>
        <!-- Paper format personalizado -->
        <record id="paperformat_payslip_recipe" model="report.paperformat">
            <field name="name">Recibo de salario</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">110</field>
        </record>

        <!-- Reemplazo del reporte por defecto -->
        <record id="report_payslip" model="ir.actions.report">
            <field name="name">Recibo boleta de pago</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">rrhh_base.report_boleta_pago_template</field>
            <field name="print_report_name">'Recibo INCOE'</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="rrhh_base.paperformat_payslip_recipe"/>
        </record>
    </data>
</odoo>
