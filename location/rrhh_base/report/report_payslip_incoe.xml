<odoo>
    <data>
        <record id="hr_payslip_report_incoe" model="ir.actions.report">
            <field name="name">Recibo INCOE</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">rrhh.report_payslip_incoe_template</field>
            <field name="print_report_name">'Recibo INCOE - Karen Arely Burgos'</field>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_type">report</field>
        </record>
        <template id="report_payslip_incoe_template">
            <t t-name="rrhh_base.report_payslip_incoe_template">
                <t t-call="web.html_container">
                    <t t-call-assets="web.assets_pdf" t-js="false"/>
                    <style>
                        body {
                        font-family: 'Inter', sans-serif;
                        font-size: 11px;
                        margin: 0;
                        padding: 0;
                        }
                        h1 {
                        font-size: 18px;
                        font-weight: bold;
                        }
                        h2 {
                        font-size: 13px;
                        font-weight: bold;
                        margin: 5px 0;
                        }
                        table {
                        width: 100%;
                        border-collapse: collapse;
                        }
                        th, td {
                        padding: 1% 2%;
                        border: 1px solid #ccc;
                        text-align: left;
                        }
                        .no-border {
                        border: none !important;
                        }
                        .header-table td {
                        vertical-align: top;
                        }
                        .label {
                        font-weight: bold;
                        }
                        .highlight {
                        background-color: #EAEDFF;
                        font-weight: bold;
                        }
                        .footer {
                        background-color: #FFF2E4;
                        font-weight: bold;
                        }
                        .section-title {
                        font-weight: bold;
                        font-size: 14px;
                        margin-top: 10px;
                        margin-bottom: 5px;
                        }
                        .border-clean {
                        border-left-color: transparent;
                        border-right-color: transparent;
                        }

                    </style>
                    <div class="page">
                        <!-- Encabezado -->
                        <table class="header-table" style="margin-bottom: 5%;">
                            <tr>
                                <td style="width: 30%; background-color: #232C6E; text-align: center;">
                                    <img src="/rrhh/static/scr/img/incoe-boletas-pago-icono.png"
                                         style="width: 70%; margin-top: 10%;"/>
                                </td>
                                <td style="width: 30%; border-color: #fff;"/>
                                <td style="width: 40%; border-color: #fff; text-align:start; padding-top: 4%;">
                                    <h1 style="font-weight: bolder; font-size: 1.5rem; margin:0;">RECIBO DE SALARIO</h1>
                                    <div>
                                        <p style="margin: 0;">
                                            <span class="label">Empleado:</span>


                                        </p>
                                        <p style="margin: 0;">
                                            <span class="label">Periodo:</span>
                                            01/06/25 - 15/06/25

                                        </p>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <!-- Sueldo base y días -->
                        <table style="margin-bottom: 5%; table-layout: auto; width: 100%;">
                            <tr style="background-color: #F1F1F1;">
                                <td class="label border-clean" style="nowrap; width: 15%;">Sueldo base</td>
                                <td class="labelborder-clean" style="text-align: start; width: 35%;">$000.00</td>
                                <td class="label border-clean" style="width: 15%;">Días laborados</td>
                                <td class="label border-clean" style="width: 35%;">0</td>
                            </tr>
                        </table>
                        <!-- Ingresos y descuentos -->
                        <table style="margin-bottom: 5%;">
                            <tr>
                                <td style="width: 45%; vertical-align: top; border-color: #fff;">
                                    <h2>Ingresos</h2>
                                    <table>
                                        <thead>
                                            <tr>
                                                <th class="border-clean border-bold"
                                                    style="border-top-color: #000; border-bottom-color: #000; font-weight: bold;">
                                                    Concepto
                                                </th>
                                                <th class="border-clean border-bold"
                                                    style="border-top-color: #000; border-bottom-color: #000; font-weight: bold;">
                                                    Monto
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="border-clean">Horas Extra Diurnas</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Horas Extra Nocturnas</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Horas Feriado Diurno</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Horas Feriado Nocturno</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Salario a pagar</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Viáticos ordinarios</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Comisiones</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean" style="border-bottom-color: #475294;">-</td>
                                                <td class="border-clean" style="border-bottom-color: #475294;">-</td>
                                            </tr>
                                            <tr class="highlight">
                                                <td class="border-clean"
                                                    style="border-top-color: #475294; border-bottom-color: #475294;">
                                                    Total Ingresos
                                                </td>
                                                <td class="border-clean"
                                                    style="border-top-color: #475294; border-bottom-color: #475294;">$
                                                    000.00
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                                <td style="width: 5%; border: 0;"/>
                                <td style="width: 45%; vertical-align: top; border-color: #fff0;">
                                    <h2>Descuentos</h2>
                                    <table>
                                        <thead>
                                            <tr>
                                                <th class="border-clean"
                                                    style="border-top-color: #000; border-bottom-color: #000; font-weight: bold;">
                                                    Concepto
                                                </th>
                                                <th class="border-clean"
                                                    style="border-top-color: #000; border-bottom-color: #000; font-weight: bold;">
                                                    Monto
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="border-clean">ISSS</td>
                                                <td class="border-clean">$000.00</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Fondo de pensiones</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Renta</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Otros</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Bancos</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Venta a empleados</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean">Préstamos</td>
                                                <td class="border-clean">0</td>
                                            </tr>
                                            <tr>
                                                <td class="border-clean" style="border-bottom-color: #475294;">FSV</td>
                                                <td class="border-clean" style="border-bottom-color: #475294;">0</td>
                                            </tr>
                                            <tr class="highlight">
                                                <td class="border-clean"
                                                    style="border-top-color: #475294; border-bottom-color: #475294;">
                                                    Total Descuentos
                                                </td>
                                                <td class="border-clean"
                                                    style="border-top-color: #475294; border-bottom-color: #475294;">$
                                                    000.00
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <!-- Sueldo líquido -->
                        <h2>Sueldo líquido</h2>
                        <table>
                            <tr class="footer">
                                <td class="border-clean"
                                    style="border-top-color: #D1AA7F; border-bottom-color: #D1AA7F;">Sueldo a pagar
                                </td>
                                <td class="border-clean"
                                    style="border-top-color: #D1AA7F; border-bottom-color: #D1AA7F;">$ 000.00
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
