<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sit_account_move_data_id" model="ir.ui.view">
            <field name="name">sit_account_move_data_id</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                    <div class="mt-2 mb-2" invisible="journal_code == 'SLR'">
                        <label for="sit_referencia" invisible="journal_code == 'SLR' or move_type == 'in_invoice'"/>
                        <field name="sit_referencia" invisible="journal_code == 'SLR' or move_type == 'in_invoice'"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                    <div class="mt-2 mb-2" invisible="journal_code == 'SLR'">
                        <label for="sit_regimen" invisible="journal_code != 'EXP'"/>
                        <field name="sit_regimen" string="Régimen de Exportación" invisible="journal_code != 'EXP'"/>
                    </div>
                </xpath>

                <xpath expr="//label[@for='journal_id']" position="before">

                        <!-- Título del bloque -->
                        <div class="o_td_label" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <div class="o_form_label fw-bold">Pago Hacienda</div>
                        </div>
                        <div class="o_td_field" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion"/>

                        <!-- Términos de Pago -->
                        <div class="o_td_label" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <label for="invoice_payment_term_id" class="o_form_label fw-bold"/>
                        </div>
                        <div class="o_td_field" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <field name="invoice_payment_term_id"/>
                        </div>

                        <!-- Condiciones de Pago -->
                        <div class="o_td_label" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <label for="condiciones_pago" String="Condición de la Operación" class="o_form_label fw-bold"/>
                        </div>
                        <div class="o_td_field" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <field name="condiciones_pago" options="{'no_open': True, 'no_create': True}"/>
                        </div>

                        <!-- Forma de Pago -->
                        <div class="o_td_label" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <label for="forma_pago" class="o_form_label fw-bold"/>
                        </div>
                        <div class="o_td_field" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <field name="forma_pago" options="{'no_open': True, 'no_create': True}"/>
                        </div>

                        <!-- Periodo -->
                        <div class="o_td_label" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <label for="sit_periodo"/>
                        </div>
                        <div class="o_td_field" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <field name="sit_periodo" options="{'no_open': True, 'no_create': True}"/>
                        </div>

                        <!-- Plazo -->
                        <div class="o_td_label" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <label for="sit_plazo"/>
                        </div>
                        <div class="o_td_field" invisible="(move_type != 'out_invoice' and not codigo_tipo_documento) or not sit_facturacion">
                            <field name="sit_plazo"/>
                        </div>
                </xpath>
                <notebook>
                    <page string="FEL" name="certificados2" invisible="journal_code == 'SLR' or not sit_facturacion or (move_type in('entry', 'in_invoice', 'in_refund') and (not codigo_tipo_documento or codigo_tipo_documento != '14') )">
                        <group>
                            <field name="sit_qr_hacienda" widget="image" invisible="0"/>
                            <field name="sit_json_respuesta" invisible="1"/>
                        </group>
                        <group>
                            <field name="sit_facturacion" invisible="1"/>

<!--                            <field name="sit_tipo_contingencia" options="{'no_open': True, 'no_create': True}"/>-->
<!--                            <field name="sit_tipo_contingencia_valores" invisible="1"/>-->
<!--                            <field name="sit_tipo_contingencia_otro" options="{'no_open': True, 'no_create': True}"/>-->
                            <!--                            <field name="sit_modelo_facturacion"/>-->
<!--                            <field name="sit_tipo_transmision" options="{'no_open': True, 'no_create': True}"/>-->
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="sit_account_move_header_observaciones" model="ir.ui.view">
            <field name="name">sit_account_move_header_observaciones</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Insertar después del campo 'ref' -->
                <xpath expr="//field[@name='ref']" position="after">
                    <group colspan="2">
                        <field name="sit_observaciones"
                               invisible="move_type == 'in_invoice' or not codigo_tipo_documento" nolabel="0"/>
                        <field name="sit_observaciones" string="Descripción" placeholder="Ingrese descripción"
                               invisible="move_type != 'in_invoice' or codigo_tipo_documento" nolabel="0"/>
                    </group>
                </xpath>
            </field>

        </record>
    </data>
</odoo>
