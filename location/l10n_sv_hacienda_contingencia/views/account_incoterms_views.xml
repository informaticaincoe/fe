<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_incoterms_form_add_button_mh" model="ir.ui.view">
        <field name="name">account.incoterms.form.add.button.mh</field>
        <field name="model">account.incoterms</field>
        <field name="inherit_id" ref="account.account_incoterms_form"/>
        <field name="arch" type="xml">
            <!-- Insertar una button box dentro del sheet -->
            <xpath expr="//form/sheet" position="inside">
            <div class="oe_button_box" name="button_box">
                <button name="actualizar_codigo_mh"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-refresh"
                        string="Actualizar Código MH"/>
            </div>
            </xpath>
        </field>
    </record>
        <!-- Heredar vista form de incoterms -->
    <record id="view_incoterms_form_inherit_codigo_mh" model="ir.ui.view">
        <field name="name">account.incoterms.form.inherit.codigo_mh</field>
        <field name="model">account.incoterms</field>
        <field name="inherit_id" ref="account.account_incoterms_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="codigo_mh"/>
            </xpath>
        </field>
    </record>

    <!-- Añade el campo codigo_mh al TREE (list) de Incoterms -->
    <record id="view_incoterms_tree_add_codigo_mh" model="ir.ui.view">
        <field name="name">account.incoterms.tree.add.codigo_mh</field>
        <field name="model">account.incoterms</field>
        <field name="inherit_id" ref="account.view_incoterms_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='name']" position="after">
                <field name="codigo_mh"/>
            </xpath>
        </field>
    </record>

</odoo>
