<!-- views/sale_order_dispatch_route_view.xml -->
<odoo>
    <record id="sale_order_form_inherit_dispatch_route" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.dispatch.route</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Lo ponemos cerca de datos generales -->
            <xpath expr="//sheet//group" position="inside">
                <field name="dispatch_route_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
