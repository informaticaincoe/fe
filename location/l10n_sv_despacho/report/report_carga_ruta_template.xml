<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_carga_de_ruta_template">
            <t t-name="l10n_sv_despacho.report_carga_de_ruta_template">
                <t t-call="web.html_container">
                    <t t-call-assets="web.assets_pdf" t-js="false"/>
                    <t t-foreach="docs" t-as="o">
                        <t t-call="web.basic_layout">
                            <div class="page" style="padding: 20px; color: #333;">
                                <style>
                                    /* ===== Base ===== */
                                    body{
                                    font-family: "DejaVu Sans","Liberation Sans",Arial,sans-serif;
                                    }
                                    .page{
                                    font-family: "DejaVu Sans","Liberation Sans",Arial,sans-serif;
                                    font-size: 13px;
                                    color: #333;
                                    }

                                    .text-right{ text-align:right; }
                                    .text-center{ text-align:center; }
                                    .bold{ font-weight:bold; }

                                    /* ===== Título ===== */
                                    .report-title{
                                    text-transform: uppercase;
                                    color: #2C3E50;
                                    font-size: 22px;
                                    font-weight: 600;
                                    }

                                    .report-num-despacho {
                                    padding-bottom: 10px;
                                    }

                                    /* ===== Header (2 bloques) ===== */
                                    .header-container{
                                    width: 100%;
                                    margin-bottom: 30px;

                                    display: table !important;
                                    table-layout: fixed !important; /* fuerza 50/50 real */
                                    border-collapse: separate !important
                                    padding: 0 10px !important; /* mitad del espacio total */
                                    margin: 0 -10px !important; /* lo compensa para que no crezca hacia afuera */
                                    }

                                    .header-container .info-block{
                                    display: table-cell !important;
                                    width: 50% !important;
                                    vertical-align: top;

                                    box-sizing: border-box;
                                    border: 1px solid #E0E0E0;
                                    border-radius: 0.5rem;
                                    background: #fff;
                                    padding:12px;
                                    }


                                    .info-block{
                                    flex: 1 1 0; /* ambos ocupan el mismo ancho */
                                    width: 50%;
                                    box-sizing: border-box;
                                    border: 1px solid #E0E0E0;
                                    border-radius: 0.5rem;
                                    background: #fff;
                                    vertical-align: top;
                                    }

                                    /* Tabla superior SIN cuadrícula interna */
                                    .info-table{
                                    width: 100% !important;
                                    border: 0 !important;
                                    border-collapse: separate !important;
                                    border-spacing: 0 !important;
                                    }
                                    .info-table tr,
                                    .info-table td,
                                    .info-table th{
                                    border: 0 !important;
                                    outline: 0 !important;
                                    box-shadow: none !important;
                                    background: transparent !important;
                                    }
                                    .info-table td{
                                    padding: 6px 0 !important;
                                    vertical-align: top;
                                    }

                                    .label-responsables{
                                    font-weight: 600;
                                    color: #555;
                                    width: 100px;
                                    }
                                    .label{
                                    font-weight: 700;
                                    color: #555;
                                    width: 65px;
                                    }
                                    .value{ color:#000; }

                                    /* ===== Tabla principal ===== */
                                    .main-table{
                                    width: 100%;
                                    border-collapse: collapse;
                                    margin-top: 20px;
                                    border: 1px solid #E0E0E0; /* borde exterior */
                                    border-radius: 5px;
                                    overflow: hidden;
                                    }

                                    .main-table thead{
                                    font-size:14px;
                                    font-weight: 900;
                                    border: 1px solid #E0E0E0;
                                    background-color:#2C3E50;
                                    color: #fff;
                                    }
                                    .main-table th{
                                    padding: 12px 8px;
                                    text-align: left;
                                    font-size: 12px;
                                    text-transform: uppercase;
                                    border: 0 !important; /* evita líneas raras en header */
                                    }

                                    /* sin líneas verticales */
                                    .main-table th,
                                    .main-table td{
                                    border-left: none !important;
                                    border-right: none !important;
                                    }

                                    /* separadores horizontales */
                                    .main-table td{
                                    padding: 10px 8px;
                                    vertical-align: top;
                                    border-bottom: 1px solid #E0E0E0;
                                    }
                                    .main-table tbody tr:last-child td{
                                    border-bottom: 0;
                                    }

                                    /* ===== Detalle de ubicación ===== */
                                    .loc-container{
                                    margin: 8px 0 0 10px;
                                    border-left: 2px solid #DDE1E6;
                                    padding-left: 10px;
                                    }
                                    .loc-header{
                                    background-color: #F8F9FA;
                                    font-weight: bold;
                                    font-size: 13px;
                                    padding: 3px 8px;
                                    display: block;
                                    color: #495057;
                                    border-radius: 3px;
                                    }
                                    .product-line{
                                    font-size: 13px;
                                    color: #666;
                                    padding: 2px 0 2px 13px;
                                    }
                                    .product-bullet{
                                    color: #2C3E50;
                                    font-weight: bold;
                                    margin-right: 5px;
                                    }

                                    .header-container .info-gap{
                                    display: table-cell !important;
                                    width: 16px !important;
                                    }
                                </style>

                                <div class="report-title text-center">Despacho de Carga</div>
                                <p class="text-center report-num-despacho" style="font-size: 12px;">Referencia:
                                    <span t-esc="o.name"/>
                                </p>
                                <div class="header-container">
                                    <div class="info-block">
                                        <table class="info-table">
                                            <tr>
                                                <td class="label-responsables">Responsable:</td>
                                                <td class="value">
                                                    <span t-field="o.route_manager_id"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label-responsables">Supervisor:</td>
                                                <td class="value">
                                                    <span t-field="o.route_supervisor_id"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label-responsables">Conductor:</td>
                                                <td class="value">
                                                    <span t-field="o.route_driver_id"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label-responsables">Vehículo:</td>
                                                <td class="value">
                                                    <span t-field="o.vehicle_id"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label-responsables">Auxiliares:</td>
                                                <td class="value">
                                                    <t t-foreach="o.assistant_ids" t-as="assistant">
                                                        <div t-field="assistant.name"/>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="info-gap"/>
                                    <div class="info-block">
                                        <table class="info-table" style="margin-left: auto;">
                                            <tr>
                                                <td class="label">Zona:</td>
                                                <td class="value">
                                                    <span t-field="o.zone_id.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label">Fecha:</td>
                                                <td class="value">
                                                    <span t-field="o.route_date"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label">Salida:</td>
                                                <td class="value">
                                                    <span t-field="o.departure_datetime"
                                                          t-options="{&quot;widget&quot;: &quot;datetime&quot;, &quot;time_only&quot;: True}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label">Llegada:</td>
                                                <td class="value">
                                                    <span t-field="o.arrival_datetime"
                                                          t-options="{&quot;widget&quot;: &quot;datetime&quot;, &quot;time_only&quot;: True}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="label">Facturas:</td>
                                                <td class="value bold">
                                                    <span t-esc="len(o.account_move_ids)"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <table class="main-table">
                                    <thead>
                                        <tr>
                                            <th width="5%" class="text-center bold">Nº</th>
                                            <th width="50%" class="text-right bold">Factura / Desglose por Estante</th>
                                            <th width="30%" class="text-right bold">Cliente</th>
                                            <th width="15%" class="text-right bold">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.account_move_ids" t-as="factura">
                                            <tr>
                                                <td class="text-center" style="border-right: 1px solid #000;">
                                                    <span t-esc="factura_index + 1"/>
                                                </td>
                                                <td>
                                                    <div class="bold" style="font-size: 14px; color: #2C3E50;"
                                                         t-field="factura.name"/>

                                                    <!-- Movimientos (move lines) -->
                                                    <t t-set="move_lines"
                                                       t-value="factura.invoice_line_ids.sale_line_ids.move_ids.move_line_ids"/>

                                                    <!-- Si NO hay movimientos: solo info del producto -->
                                                    <t t-if="not move_lines">
                                                        <t t-foreach="factura.invoice_line_ids" t-as="line">
                                                            <div class="product-line">
                                                                <span class="product-bullet">•</span>
                                                                (<span t-field="line.product_id.default_code"/>)
                                                                <span t-field="line.product_id.name"/>
                                                                <strong>(
                                                                    <span t-field="line.quantity"/>
                                                                    <span t-field="line.product_uom_id"/>
                                                                    )
                                                                </strong>
                                                            </div>
                                                        </t>
                                                    </t>

                                                    <!-- Si SÍ hay movimientos: agrupar por ubicación -->
                                                    <t t-else="">
                                                        <t t-set="ubicaciones"
                                                           t-value="move_lines.mapped('location_id')"/>

                                                        <t t-foreach="ubicaciones" t-as="loc">
                                                            <div class="loc-container">
                                                                <span class="loc-header">Ubicación:
                                                                    <span t-field="loc.display_name"/>
                                                                </span>

                                                                <t t-foreach="factura.invoice_line_ids" t-as="line">
                                                                    <t t-set="detalles"
                                                                       t-value="line.sale_line_ids.move_ids.move_line_ids.filtered(lambda ml: ml.location_id == loc)"/>

                                                                    <div t-if="detalles" class="product-line">
                                                                        <span class="product-bullet">•</span>
                                                                        (<span t-field="line.product_id.default_code"/>)
                                                                        <span t-field="line.product_id.name"/>
                                                                        <strong>(
                                                                            <span t-esc="sum(detalles.mapped('quantity'))"/>
                                                                            <span t-field="line.product_uom_id"/>
                                                                            )
                                                                        </strong>
                                                                    </div>
                                                                </t>

                                                            </div>
                                                        </t>
                                                    </t>
                                                </td>

                                                <td>
                                                    <span t-field="factura.partner_id.name"/>
                                                </td>
                                                <td class="text-left bold">
                                                    <span t-field="factura.amount_total"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>